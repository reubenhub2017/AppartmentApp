<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.reubenukah.appartmentapp.Displaylandlord"
    tools:showIn="@layout/activity_displaylandlord"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"

    >




    <EditText
        android:id="@+id/FN"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:textColor="@color/TextColor"

        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Full Name"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/confirminfo"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#5c6fff"



        android:onClick="signupinfo"
        android:text="Confirm"
        android:textColor="#ffff"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password2" />

    <EditText
        android:id="@+id/email"
        android:layout_width="223dp"
        android:layout_height="43dp"
        android:textColor="@color/TextColor"


        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Email"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/FN"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/Motto"
        android:layout_width="221dp"
        android:layout_height="43dp"
        android:textColor="@color/TextColor"


        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Motto"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="223dp"
        android:layout_height="51dp"
        android:textColor="@color/TextColor"


        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Password"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Motto" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="223dp"
        android:layout_height="51dp"
        android:textColor="@color/TextColor"


        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Confirm Password"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/password1"
        app:layout_constraintHorizontal_bias="0.503" />


</android.support.constraint.ConstraintLayout>
